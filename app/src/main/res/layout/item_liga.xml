<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/cardBackgroundColor">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nombre_liga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la Liga"
            android:textSize="18sp"
            android:textStyle="bold"
                android:textColor="?attr/textColorPrimary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_descripcion_liga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n de la liga"
            android:textSize="14sp"
                android:textColor="?attr/textColorSecondary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_num_equipos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 equipos"
            android:textSize="12sp"
                android:textColor="?attr/textColorPrimary"
            android:background="@drawable/bg_tag"
            android:padding="4dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_eliminar_liga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:textSize="12sp"
            android:padding="8dp"
            android:background="@drawable/bg_button_danger"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView> 