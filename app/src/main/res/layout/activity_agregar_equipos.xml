<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/backgroundPrimary">

    <!-- Información de la Liga -->
    <TextView
        android:id="@+id/tv_info_liga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Información de la Liga"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/textColorPrimary"
        android:background="@drawable/bg_info_card"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Estado de equipos -->
    <TextView
        android:id="@+id/tv_equipos_agregados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar equipos"
        android:textSize="14sp"
        android:textColor="?attr/textColorSecondary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Formulario para agregar equipo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_form_card"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Nuevo Equipo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/textColorPrimary"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/et_nombre_equipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Equipo"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_edit_text"
            android:textColor="?attr/textColorPrimary"
            android:textColorHint="?attr/textColorSecondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Propietario:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/textColorPrimary"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rg_propietario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <RadioButton
                android:id="@+id/rb_usuario1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario 1"
                android:textSize="16sp"
                android:textColor="?attr/textColorPrimary"
                android:buttonTint="?attr/colorPrimary"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/rb_usuario2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario 2"
                android:textSize="16sp"
                android:textColor="?attr/textColorPrimary"
                android:buttonTint="?attr/colorPrimary"
                android:padding="8dp" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_agregar_equipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Equipo"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/bg_button_primary"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Lista de equipos -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipos Agregados"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/textColorPrimary"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_equipos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- Botón Finalizar -->
    <Button
        android:id="@+id/btn_finalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar y Crear Liga"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@drawable/bg_button_secondary"
        android:textColor="@android:color/white"
        android:enabled="false" />

</LinearLayout> 