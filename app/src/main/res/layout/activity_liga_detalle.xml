<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundPrimary">

    <!-- Header de la Liga -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorPrimary"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_nombre_liga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la Liga"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_info_liga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Información de la liga"
            android:textSize="14sp"
            android:textColor="?attr/colorOnPrimary" />

    </LinearLayout>

    <!-- Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:tabTextColor="?attr/textColorSecondary"
        app:tabSelectedTextColor="?attr/colorPrimary"
        app:tabIndicatorColor="?attr/colorPrimary"
        app:tabTextAppearance="@style/TabTextAppearance" />

    <!-- ViewPager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Botón Guardar Liga -->
    <Button
        android:id="@+id/btn_guardar_liga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Liga"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_button_primary"
        android:textColor="@android:color/white" />

</LinearLayout> 