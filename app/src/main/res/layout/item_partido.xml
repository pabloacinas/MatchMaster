<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <!-- LinearLayout principal dentro del CardView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:padding="16dp"
        android:baselineAligned="false"
        android:background="?attr/cardBackgroundColor">

        <!-- Contenedor para la informaciÃ³n principal del partido (Izquierda) -->
        <LinearLayout
            android:id="@+id/layout_info_partido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp"> <!-- Margen para separar de los goleadores -->

            <!-- Equipos y resultado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_equipo_local"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Equipo Local"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textColorPrimary"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/tv_resultado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- -"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textColorPrimary"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tv_equipo_visitante"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Equipo Visitante"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textColorPrimary"
                    android:gravity="start" />
            </LinearLayout>

            <!-- Estado del partido -->
            <TextView
                android:id="@+id/tv_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:textSize="12sp"
                android:textColor="?attr/textColorSecondary"
                android:layout_gravity="center_horizontal" 
                android:layout_marginBottom="4dp" />

            <!-- Traspaso -->
            <TextView
                android:id="@+id/tv_traspaso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="?attr/infoColor"
                android:layout_gravity="center_horizontal" 
                android:visibility="gone" />
        </LinearLayout>

        <!-- Contenedor para los goleadores (a la derecha) -->
        <LinearLayout
            android:id="@+id/layout_goleadores"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:gravity="center_vertical"> <!-- Para centrar verticalmente el contenido de este LinearLayout -->

            <!-- Columna Goleadores Locales -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="G. Local"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tv_goleadores_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:text="Jugador A\nJugador B"/>
            </LinearLayout>

            <!-- Columna Goleadores Visitantes -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="G. Visit."
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tv_goleadores_visitante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:text="Jugador C\nJugador D"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
