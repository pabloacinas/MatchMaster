<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/cardBackgroundColor">

    <TextView
        android:id="@+id/tv_posicion"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/textColorPrimary"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/tv_nombre_equipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Equipo"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/textColorPrimary" />

        <TextView
            android:id="@+id/tv_propietario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Propietario"
            android:textSize="12sp"
            android:textColor="?attr/textColorSecondary" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_puntos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/textColorPrimary"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_partidos_jugados"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:textSize="14sp"
        android:textColor="?attr/textColorPrimary"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_victorias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:textSize="14sp"
        android:textColor="?attr/successColor"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_derrotas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:textSize="14sp"
        android:textColor="?attr/errorColor"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_diferencia_goles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:textSize="14sp"
        android:textColor="?attr/textColorPrimary"
        android:gravity="center" />

</LinearLayout> 