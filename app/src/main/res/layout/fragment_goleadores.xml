<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundPrimary">

    <!-- Header con botón de agregar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Goleadores"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/btn_agregar_goleador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="20sp"
            android:textStyle="bold"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:background="?attr/buttonPrimaryColor"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Header de la tabla -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pos"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:gravity="center"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Jugador"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Goles"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acción"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:gravity="center"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Lista de goleadores -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_goleadores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Mensaje cuando no hay goleadores -->
    <TextView
        android:id="@+id/tv_goleadores_vacio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay goleadores registrados\nToca el botón + para agregar uno"
        android:textSize="16sp"
        android:textColor="?attr/textColorSecondary"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="visible" />

</LinearLayout> 