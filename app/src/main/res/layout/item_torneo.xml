<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_nombre_torneo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Torneo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_descripcion_torneo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del torneo"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tipo_torneo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminación"
                android:textSize="12sp"
                android:textColor="@android:color/holo_green_dark"
                android:background="@drawable/bg_tag"
                android:padding="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_num_participantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 participantes"
                android:textSize="12sp"
                android:textColor="@android:color/holo_blue_dark"
                android:background="@drawable/bg_tag"
                android:padding="4dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView> 